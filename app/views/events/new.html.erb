<%= form_for @event do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :deadline %>
  <%= f.date_field :deadline %>

  <%= f.label :total %>
  <%= f.number_field :total %>

  <%= f.label :angerlevel, "Anger level" %>
  <%= f.select(:angerlevel, (1..3)) %>

  <%= f.fields_for :userinvitees do |x| %>
    <fieldset>
      <%= x.label :name, "Name" %>
      <%= x.text_area :name %>

      <%= x.label :mobile, "Mobile" %>
      <%= x.text_area :mobile %>

      <%= x.label :email, "Email" %>
      <%= x.text_area :email %>
    </fieldset>
  <% end %> 

	<%= f.submit 'Create Event' %>

<% end %>