<%= form_for @event do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :deadline %>
  <%= f.text_field :deadline %>

  <%= f.label :total %>
  <%= f.number_field :total %>

  <%= f.label :angerlevel, "Anger level" %>
  <%= f.select(:angerlevel, (1..3)) %>

  <%= f.fields_for :userinvitees do |userinvitee| %>
    <fieldset>
      <%= userinvitee.label :name, "Name" %>
      <%= userinvitee.text_area :name %>
      <%= userinvitee.check_box :_destroy %>
      <%= userinvitee.label :_destroy, "Remove User"  %>
      <%= userinvitee.check_box :_create %>
      <%= userinvitee.label :_create, "Create User"  %>

      <%= userinvitee.label :mobile, "Mobile" %>
      <%= userinvitee.text_area :mobile %>

      <%= userinvitee.label :email, "Email" %>
      <%= userinvitee.text_area :email %>
    </fieldset>
  <% end %> 

	<%= f.submit 'Create userinvite' %>
<% end %>