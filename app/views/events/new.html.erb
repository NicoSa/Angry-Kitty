<%= form_for @event do |f| %>

  <p>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </p>

  <p>
  <%= f.label :description %>
  <%= f.text_field :description %>
  </p>

  <p>
  <%= f.label :deadline %>
  <%= f.date_field :deadline %>
  </p>

  <p>
  <%= f.label :total %>
  <%= f.number_field :total %>
  </p>

  <p>
  <%= f.label :angerlevel, "Anger level" %>
  <%= f.select(:angerlevel, (1..3)) %>
  </p>

  <p>
    Add friends below, when finished click Create Event:
  </p>

  <p>
  <%= f.fields_for :userinvitees, class:"userinvitees" do |x| %>
    <!-- <fieldset> -->
      <%= x.label :email, "Email" %>
      <%= x.text_field :email %>

      <%= x.label :name, "Name" %>
      <%= x.text_field :name %>

      <%= x.label :mobile, "Mobile" %>
      <%= x.text_field :mobile %>

    <!-- </fieldset> -->
  <% end %> 
  </p>

  <p>
	<%= f.submit 'Create Event' %>
  </p>

<% end %>



