<% if @event.debts.any? %>

	<h3>Event title: <%= @event.title %></h3>

	<h4> Angry Kitty is purrring </h4>
		<ul>
			<% @paid.each do |debt| %>
			  <li> <%= debt.user.email %> | ✓ | <%= debt.payment_amount %> </li>
			<% end %>
		</ul>

	<h4> Angry Kitty is still chasing </h4>
	<ul>
		<% @unpaid.each do |debt| %>
		  <li> 
		  	<%= debt.user.email %> | ✗ | <%= debt.payment_amount %> 
		  	<%= link_to 'Paid', payments_path(debt.user_id, debt.event_id,), method: :post %>
		  </li>
		<% end %>
	</ul>
<% else %>

	<h3>No payments for this event - note debts will in future always exists for an event</h3>

<% end %>
