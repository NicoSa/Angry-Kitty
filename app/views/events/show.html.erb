
<div class="container row">
    <div class"title-container col-xs-12">
      <div class='row'>
        <h3 class="event-title column col-xs-4 col-xs-offset-4"><%= @event.title %></h3>
        <h3 class="event-timer column col-xs-4"><%= @event.deadline.strftime("%d-%m-%y") %> </h3>
      </div>
    </div>
  <% if user_tabulator(@event, current_user).any? || invitee_tabulator(@event).any? %>
    <div class"user-container row">
      <table class="responsive table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
          <% user_tabulator(@event, current_user).each do |user| %>
            <tr>
              <th> <%= user.name %></th>
                <% if user.debts.find_by(event: @event).paid %>
                  <td> | ✓ | </td>
                <% else %>
                  <td>
                    | ✗ |
                    <% if current_user == @event.organiser %>
                      <%= link_to 'Mark as paid', payments_path(user.id, @event.id), method: :post %>
                    <% else %>
                      <%= link_to 'PAY NOW!', new_charges_path(user.id, @event.id) %>
                    <% end %>
                  </td>
                <% end %>
              <td><%= @event.payment_amount %></td>
            </tr>
          <% end %>
          <% invitee_tabulator(@event).each do |invitee| %>
            <tr>
              <th> <%= invitee.name %></th>
              <td> not accepted </td>
              <td><%= @event.payment_amount %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <h3>Dancing by yourself? No invitees to this party!</h3>
  <% end %>
</div>