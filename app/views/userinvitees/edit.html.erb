<section class="panel panel-default">
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> Invitee settings</strong></div>
  </div>
  <div class="modal-body">
    <div class="panel-body">
      <%= form_for [@event, @userinvitee] do |f| %>
        <div class="form-group">
          <label for="" class="col-sm-2 edit-userinvitee-label">Name</label>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control edit-userinvitee" %>
          </div>
        </div>

        <div class="form-group">
          <label for="label-focus" class="col-sm-2 edit-userinvitee-label">Email</label>
          <div class="col-sm-10">
            <%= f.text_field :email, class: "form-control edit-userinvitee" %>
          </div>
        </div>

        <div class="form-group">
          <label for="label-focus" class="col-sm-2 edit-userinvitee-label">Mobile</label>
          <div class="col-sm-10">
            <%= f.text_field :mobile, class: "form-control edit-userinvitee" %>
          </div>
        </div>

        <%= f.submit 'Save changes', class: "btn btn-md btn-success" %>
        <%= f.submit 'Save and resend invite', class: "btn btn-md btn-alert", name: 'resend' %>
      <% end %>
    </div> <!-- end of panel-body -->
  </div>
</section>